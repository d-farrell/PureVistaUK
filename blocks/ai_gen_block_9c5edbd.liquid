{% doc %}
  @prompt
    Create breadcrumbs
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumbs-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-breadcrumbs-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.font_size }}px;
    font-family: {{ block.settings.font_family.family }}, {{ block.settings.font_family.fallback_families }};
    font-weight: {{ block.settings.font_family.weight }};
  }

  .ai-breadcrumbs-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: {{ block.settings.hover_underline }};
  }

  .ai-breadcrumbs-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    user-select: none;
  }

  .ai-breadcrumbs-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumbs-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<breadcrumbs-{{ ai_gen_id }} class="ai-breadcrumbs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <nav class="ai-breadcrumbs-nav-{{ ai_gen_id }}" aria-label="Breadcrumb">
    <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
      <a href="/" class="ai-breadcrumbs-link-{{ ai_gen_id }}">{{ block.settings.home_text }}</a>
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
    </div>

    {% if collection %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <a href="{{ collection.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">{{ collection.title }}</a>
        {% if product %}
          <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        {% endif %}
      </div>
    {% endif %}

    {% if product %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
      </div>
    {% elsif collection %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ collection.title }}</span>
      </div>
    {% elsif page %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ page.title }}</span>
      </div>
    {% elsif article %}
      {% if blog %}
        <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <a href="{{ blog.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">{{ blog.title }}</a>
          <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        </div>
      {% endif %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ article.title }}</span>
      </div>
    {% elsif blog %}
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ blog.title }}</span>
      </div>
    {% endif %}
  </nav>
</breadcrumbs-{{ ai_gen_id }}>

<script>
  (function() {
    class Breadcrumbs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('breadcrumbs-{{ ai_gen_id }}', Breadcrumbs{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Breadcrumbs",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home text",
      "default": "Home"
    },
    {
      "type": "select",
      "id": "separator",
      "label": "Separator",
      "options": [
        {
          "value": "/",
          "label": "Slash (/)"
        },
        {
          "value": ">",
          "label": "Greater than (>)"
        },
        {
          "value": "›",
          "label": "Single angle (›)"
        },
        {
          "value": "»",
          "label": "Double angle (»)"
        },
        {
          "value": "•",
          "label": "Bullet (•)"
        },
        {
          "value": "—",
          "label": "Dash (—)"
        }
      ],
      "default": "/"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 15
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "spacing",
      "label": "Item spacing",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "font_family",
      "label": "Font",
      "default": "poppins_n4"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#000000cf"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "hover_underline",
      "label": "Hover underline",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "underline",
          "label": "Underline"
        }
      ],
      "default": "underline"
    },
    {
      "type": "color",
      "id": "current_color",
      "label": "Current page color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#000000cf"
    }
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}
