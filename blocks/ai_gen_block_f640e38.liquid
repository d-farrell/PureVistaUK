{% doc %}
  @prompt
    Masonary section that allows me to show images with titles beneath each item. Give me colour scheme settings and option to stack or show as masonary on mobile. Give me column controls and crop images so that I can adjust height of each item in grid so I can create a masonry effect. give me spacing settings
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-masonry-grid-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.color_scheme.settings.background }};
  }

  .ai-masonry-grid__inner-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-masonry-grid__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.item_border_radius }}px;
  }

  .ai-masonry-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.item_border_radius }}px;
  }

  .ai-masonry-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-masonry-grid__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.color_scheme.settings.border }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-masonry-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-masonry-grid__title-{{ ai_gen_id }} {
    margin-top: {{ block.settings.title_spacing }}px;
    color: {{ block.settings.color_scheme.settings.foreground }};
    font-size: {{ block.settings.title_font_size }}px;
    text-align: {{ block.settings.title_alignment }};
    font-family: var(--font-{{ block.settings.title_font }}-family);
  }

  @media screen and (max-width: 749px) {
    .ai-masonry-grid__inner-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}
    }
  }
{% endstyle %}

<masonry-grid-{{ ai_gen_id }} class="ai-masonry-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-masonry-grid__inner-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign title_key = 'title_' | append: i
        assign height_key = 'height_' | append: i
        
        assign item_image = block.settings[image_key]
        assign item_title = block.settings[title_key]
        assign item_height = block.settings[height_key]
      %}
      
      {% if item_image != blank or item_title != blank %}
        <div class="ai-masonry-grid__item-{{ ai_gen_id }}">
          <div class="ai-masonry-grid__image-wrapper-{{ ai_gen_id }}" style="height: {{ item_height }}px;">
            {% if item_image %}
              <img
                src="{{ item_image | image_url: width: 800 }}"
                alt="{{ item_image.alt | escape }}"
                loading="lazy"
                width="{{ item_image.width }}"
                height="{{ item_image.height }}"
                class="ai-masonry-grid__image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-masonry-grid__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          {% if item_title != blank %}
            <h3 class="ai-masonry-grid__title-{{ ai_gen_id }}">{{ item_title }}</h3>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</masonry-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class MasonryGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('masonry-grid-{{ ai_gen_id }}', MasonryGrid{{ ai_gen_id }});
  })();
</script>

