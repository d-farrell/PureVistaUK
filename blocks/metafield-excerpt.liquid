{%- assign product_resource = closest.product -%}
{%- if product_resource.metafields.product.excerpt.value != blank -%}
  <div
    class="metafield-excerpt spacing-style"
    style="{% render 'spacing-style', settings: block.settings %} color: #7f7f7f;"
    {{ block.shopify_attributes }}
  >
    {{- product_resource.metafields.product.excerpt.value | truncatewords: 15 -}}
  </div>
{%- endif -%}

